<div class="container py-3">
<h1>Restaurants</h1>
<%# <%= link_to "Add a new restaurant", new_restaurant_path,  class: "btn btn-primary" %> <br><br>
<ul>
  <% @restaurants.each do |restaurant| %>
    <li class="row">
      <div class="col-sm"><h3 class="text-dark"><%= link_to restaurant.name, restaurant_path(restaurant.id) %></h3></div>
      <div class="col-sm"><i class="fa-regular fa-pen-to-square"></i><%= link_to "Add a review", new_restaurant_review_path(restaurant), class: "btn btn-primary"%></div>
    </li>
    <% end %>
</ul>
</div>
